<div class ="row justify-content-md-center top-buffer w-100" id="itemsTable">
  <!--Start Datatables to display items for sale-->
  <table id="item_Table" class="table table-striped" width="100%">
    <thead>
      <tr>
          <th>productName</th>
          <th>itemPrice</th>
