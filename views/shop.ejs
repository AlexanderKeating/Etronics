<script>
    $(document).ready(function () {
        var t = $('#item_Table').DataTable({
            "paging": true,
            "pageLength": 10,
            "processing": true,
            "serverSide": true,
            'ajax': {
                'type': 'POST',
                'url': '/itemsToTable'
            },
            'columns':
                [
                { 'data': 'productName', 'name': 'productName'},
                { 'data': 'itemPrice', 'name': 'itemPrice' },
                { 'data': 'Quantity', 'name': 'Quantity' },
                { 'data': 'Description', 'name': 'Description' },
                { 'data': 'seller', 'name': 'seller' },


    
                ],
            "columnDefs": [
                {
                    "searchable": false,
                    "orderable": true,
